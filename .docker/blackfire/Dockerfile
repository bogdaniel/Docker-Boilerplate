FROM blackfire/blackfire

ENV BLACKFIRE_SERVER_ID ${BLACKFIRE_SERVER_ID}
ENV BLACKFIRE_SERVER_TOKEN ${BLACKFIRE_SERVER_TOKEN}

ENV BLACKFIRE_CLIENT_ID ${BLACKFIRE_CLIENT_ID}
ENV BLACKFIRE_CLIENT_TOKEN ${BLACKFIRE_CLIENT_TOKEN}

ENV BLACKFIRE_CONFIG /dev/null
ENV BLACKFIRE_LOG_LEVEL ${BLACKFIRE_LOG_LEVEL}
ENV BLACKFIRE_SOCKET ${BLACKFIRE_SOCKET}

RUN mkdir -p /var/run/blackfire

EXPOSE ${BLACKFIRE_PORT}

RUN apk add --no-cache curl

# ADD blackfire blackfire-agent /usr/bin/

CMD ["blackfire-agent"]